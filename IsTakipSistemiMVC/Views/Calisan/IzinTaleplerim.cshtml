@model List<IsTakipSistemiMVC.Models.TBL_IZINLER>
@{
    ViewBag.Title = "İzin Taleplerim";
    Layout = "~/Views/Shared/_layoutCalisan.cshtml";
    ViewBag.tabloTitle = "İzinlerim";
}


<div class="mt-5 ">
    @Html.Partial("_partialTitle", new { ViewBag.tabloTitle })
</div>

<div class="container mt-5">
    @foreach (var izin in Model)
    {
        <div class="card">
            <div class="card-header text-center" style="background-color: var(--dark); color:white; font-size: 18px;">
                İzin Gün Sayısı: @izin.izinGunuSayisi
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><b>İzin Başlangıç Tarihi:</b> @izin.izinBaslangicTarihi.Value.ToString("dd/MM/yyyy")</li>
                    <li class="list-group-item"><b>İzin Bitiş Tarihi:</b> @izin.izinBitisTarihi.Value.ToString("dd/MM/yyyy")</li>
                    <li class="list-group-item"><b>İzin Değerlendirilme Tarihi:</b> @izin.izinDegerlendirmeTarihi.Value.ToString("dd/MM/yyyy - HH:mm")</li>
                </ul>
            </div>
        </div>

        <br />
    }
</div>

