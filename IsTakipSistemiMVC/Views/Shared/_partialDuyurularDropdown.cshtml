@model IEnumerable<IsTakipSistemiMVC.Models.DuyuruDropdownModel>

<div class="nav-item dropdown">
    <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" style="color:var(--dark)">
        <i class="fa fa-bullhorn me-lg-2" style="color:var(--dark);"></i>
        <span class="d-none d-lg-inline-flex">Duyurular</span>
    </a>
    <div class="dropdown-menu dropdown-menu-end border-0 rounded-0 rounded-bottom m-0">
        @foreach (var duyuru in Model)
        {
            <a href="@Url.Action("DuyuruInfo", "Duyurular", new { id = duyuru.DuyuruID })" class="dropdown-item" style="color:var(--dark)">
                <h6 class="fw-normal mb-0">@duyuru.DuyuruBaslik</h6>
                <small>@duyuru.YayinlanmaTarihi</small>
            </a>
            <hr class="dropdown-divider">
        }
        <a href="@Url.Action("Index","Duyurular")" class="dropdown-item text-center" style="color:var(--dark)">Bütün Duyuruları Gör</a>
    </div>
</div>
