
@{
    Layout = ViewBag.layout;
    ViewBag.Title = "Profilim";

}

<div class="container-fluid">
    <div class="profil-custom">
        <div class="row">
            <div class="col-md-6 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5">
                    <img class="img-custom rounded-circle" src="@ViewBag.pFoto">
                </div>
            </div>
            <div class="col-md-6 border-right">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Kişisel Bilgiler</h4>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-12">
                            <label class="labels">Ad Soyad:</label>
                            <input type="text" class="form-control" placeholder="" value="@ViewBag.pAdSoyad" readonly>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <label class="labels">Telefon Numarası:</label>
                            <input type="text" class="form-control" value="@ViewBag.pTelefonNumara">
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <label class="labels">Doğum Tarihi:</label>
                            <input type="text" class="form-control" id="Tarih" name="Tarih" value="@ViewBag.pDogumTarihi"/>

                        </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mt-5 mb-3">
                        <h4 class="text-right">Şirket Bilgileri</h4>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <label class="labels">Yetki Tür Adı:</label>
                            <input type="text" class="form-control" value="@ViewBag.pYetkiTurAd" readonly>
                        </div>
                        <div class="col-md-6">
                            <label class="labels">Birim Adı:</label>
                            <input type="text" class="form-control" value="@ViewBag.pBirimAd" readonly>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6">
                            <label class="labels">Personel Kullanıcı Adı:</label>
                            <input type="text" class="form-control" value="@ViewBag.pKullaniciAdi" readonly>
                        </div>
                        <div class="col-md-6">
                            <label class="labels">Personel Şifre:</label>
                            <input type="text" class="form-control" value="@ViewBag.pParola" readonly>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <label class="labels">Personel Mail Adresi:</label>
                            <input type="text" class="form-control" value="@ViewBag.pMailAdresi" readonly>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12">
                            <label class="labels">İşe Giriş Tarihi:</label>
                            <input type="text" class="form-control" value="@ViewBag.pGirisTarihi" readonly>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>