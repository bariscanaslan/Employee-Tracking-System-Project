
@{
    Layout = ViewBag.layout;
}

<script src="~/Assets/tinymce/tinymce.min.js" referrerpolicy="origin"></script>
<script>
    tinymce.init({
        selector: '#textarea',
        license_key: 'gpl'
    });
</script>


<div class="mt-5">
    <h1>TinyMCE Quick Start Guide</h1>
    <form method="post">
        <textarea id="textarea">Hello, World!</textarea>
    </form>
</div>